<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.15SquaresPuzzle" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ButtonStyle"> <!-- the attributes and construction of the button -->
        <item name="android:layout_width" >60dp</item> <!-- Width -->
        <item name="android:layout_height" >60dp</item> <!-- Height -->
        <item name="android:onClick">buttonClick</item> <!-- click register -->
        <item name="android:layout_margin">5dp</item> <!-- separates the buttons so they aren't touch each other -->
        <item name="colorAccent">@color/purple_500</item>



    </style>

</resources>